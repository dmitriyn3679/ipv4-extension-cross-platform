{
  "name": "Proxy Ipv4",
  "description": "App for IPs using",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Proxy Ipv4"
  },
  "permissions": [
    "webRequest",
    "webRequestAuthProvider",
    "proxy",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/favicons/favicon-16x16-light.png",
    "48": "assets/favicons/favicon-48x48-light.png",
    "128": "assets/favicons/android-chrome-192x192-light.png",
    "256": "assets/favicons/android-chrome-512x512-light.png",
    "512": "assets/favicons/android-chrome-512x512-light.png"
  },
  "content_scripts": [{
    "world": "ISOLATED",
    "matches":["*://*/*"],
    "match_about_blank": true,
    "all_frames": true,
    "run_at": "document_start",
    "js": ["data/inject/isolated.js"]
  }, {
    "world": "MAIN",
    "matches":["*://*/*"],
    "match_about_blank": true,
    "all_frames": true,
    "run_at": "document_start",
    "js": ["data/inject/main.js"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": ["build/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
